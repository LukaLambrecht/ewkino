CC=g++
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= src/treeReader.cc src/tZq.cc src/analysisTools.cc src/eventSelection.cc plotting/plotCode.cc plotting/tdrStyle.cc
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE= tZq

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)
