CC=g++ -Wall -Wno-reorder
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= src/Plot.cc src/Category.cc src/Sample.cc src/HistCollectionBase.cc src/HistCollectionSample.cc src/HistCollectionDist.cc src/treeReader.cc src/dilepCR.cc src/analysisTools.cc src/eventSelection.cc src/ewkinoTools.cc plotting/drawLumi.cc plotting/plotCode.cc plotting/tdrStyle.cc 
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE= dilepCR

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)
