CC=g++ -Wall -Wno-reorder -Wextra
CFLAGS= -Wl,--no-as-needed,-lTMVA,-lPyMVA
LDFLAGS=`root-config --glibs --cflags`
SOURCES= src/plotNN.cc src/Sample.cc src/treeReader.cc src/analysisTools.cc src/eventSelection.cc plotting/drawLumi.cc plotting/plotCode.cc plotting/tdrStyle.cc src/objectSelection.cc src/kinematicTools.cc src/treeReaderErrors.cc src/stringTools.cc src/systemTools.cc src/trilepTools.cc src/TrainingTree.cc src/Category.cc
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE= plotNN

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)
