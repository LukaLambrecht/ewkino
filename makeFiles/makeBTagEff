CC=g++
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= src/eventSelection.cc bTagSFCode/bTagEff.cc src/treeReader.cc src/analysisTools.cc src/Sample.cc 
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE= bTagEff

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)b
